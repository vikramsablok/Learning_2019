@model Chapter5.Models.Product[]

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DemoArray</title>
</head>
<body>
    <div>
        @if (Model.Length > 0)
        {    <table class="table-bordered">
            <thead><tr><th>Product</th><th>Price</th></tr></thead>
            <tbody>
                @foreach (Chapter5.Models.Product p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>$@p.Price</td>
                    </tr>            
                }
            </tbody>
        </table> }
        else
        {    <h2>No product data</h2> }

    </div>
</body>
</html>
